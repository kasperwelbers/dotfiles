[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-shift-h": "vim::ResizePaneLeft",
      "ctrl-shift-j": "vim::ResizePaneDown",
      "ctrl-shift-k": "vim::ResizePaneUp",
      "ctrl-shift-l": "vim::ResizePaneRight",
      "ctrl-alt-h": "workspace::SwapPaneLeft",
      "ctrl-alt-j": "workspace::SwapPaneDown",
      "ctrl-alt-k": "workspace::SwapPaneUp",
      "ctrl-alt-l": "workspace::SwapPaneRight"
    }
  }
